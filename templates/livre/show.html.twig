{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1>Livre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ livre.date ? livre.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src={{ livre.image }} alt={{ livre.titre }}/></td>
            </tr>
            <tr>
                <th>Nb_pages</th>
                <td>{{ livre.nbPages }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ livre.auteur}}</td>
            </tr>
            <tr>
                <th>nom</th>
                <td>{{ auteur.nom}}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_livre_index') }}">back to list</a>

    <a href="{{ path('app_livre_edit', {'id': livre.id}) }}">edit</a>

    {{ include('livre/_delete_form.html.twig') }}
{% endblock %}
